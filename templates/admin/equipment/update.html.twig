{% extends 'admin/layouts/main.html.twig' %}
{% block content %}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Equipment Form</h5>
            {{form_start(form , {method:'POST',action:path('app_equipment_update',{id:equipment.id})})}}
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">{{form_label(form.name)}}</label>
                    <div class="col-sm-10">
                        {{form_widget(form.name)}}
                    </div>
                    <div class="invalid-feedback">
                        {{form_errors(form.name)}}
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">{{form_label(form.quantity)}}</label>
                    <div class="col-sm-10">
                        {{form_widget(form.quantity)}}
                    </div>
                    <div class="invalid-feedback">
                        {{form_errors(form.quantity)}}
                    </div>
                </div>
                <div class="text-center">
                    {{form_row(form.submit)}}
                </div>
            {{form_end(form)}}
        </div>
{% endblock %}
