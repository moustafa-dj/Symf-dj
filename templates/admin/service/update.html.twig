{% extends 'admin/layouts/main.html.twig' %}
{% block content %}
        <div class="card">
        <div class="card-body">
            <h5 class="card-title">Domain Form</h5>
            {{ form_start(form, { method: 'POST', action: path('app_service_update',{id:service.id}), 'attr': { 'enctype': 'multipart/form-data' } }) }}                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">{{form_label(form.title)}}</label>

                    <div class="col-sm-10">
                        {{form_widget(form.title)}}
                        <div class="invalid-feedback">
                            {{form_errors(form.title)}}
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">{{form_label(form.description)}}</label>

                    <div class="col-sm-10">
                        {{form_widget(form.description)}}
                        <div class="invalid-feedback">
                            {{form_errors(form.description)}}
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">{{form_label(form.price)}}</label>
                    <div class="col-sm-10">
                        {{form_widget(form.price)}}
                        <div class="invalid-feedback">
                            {{form_errors(form.price)}}
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">{{form_label(form.domain)}}</label>
                    <div class="col-sm-10">
                        {{form_widget(form.domain)}}
                        <div class="invalid-feedback">
                            {{form_errors(form.domain)}}
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">{{form_label(form.ServiceMedia)}}</label>
                    <div class="col-sm-10">
                        {{form_widget(form.ServiceMedia)}}
                        <div class="invalid-feedback">
                            {{form_errors(form.ServiceMedia)}}
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    {{form_row(form.submit)}}
                </div>
                
            {{form_end(form)}}
        </div>
    </div>
{% endblock %}